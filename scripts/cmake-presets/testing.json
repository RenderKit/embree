{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "no_testing",
      "cacheVariables": {
        "BUILD_TESTING": "OFF"
      }
    },
    {
      "name": "testing_1",
      "cacheVariables": {
        "BUILD_TESTING": "ON",
        "EMBREE_TESTING_INTENSITY": "1"
      }
    },
    {
      "name": "testing_2",
      "cacheVariables": {
        "BUILD_TESTING": "ON",
        "EMBREE_TESTING_INTENSITY": "2"
      }
    },
    {
      "name": "testing_3",
      "cacheVariables": {
        "BUILD_TESTING": "ON",
        "EMBREE_TESTING_INTENSITY": "3"
      }
    },
    {
      "name": "testing_4",
      "cacheVariables": {
        "BUILD_TESTING": "ON",
        "EMBREE_TESTING_INTENSITY": "4"
      }
    },
    {
      "name": "memcheck",
      "cacheVariables": {
        "EMBREE_TESTING_MEMCHECK": "ON"
      }
    }
  ]
}
